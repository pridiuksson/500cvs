{
      "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "lib",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true
      },
      "include": ["src/**/*.ts", "genkit.config.ts"],
      "exclude": ["node_modules"],
      "ts-node": {
        "esm": true
      }
    }